@page "/ui/git-repos"
@rendermode InteractiveServer
@using DevBuddy.Server.Data.Models
@using DevBuddy.Server.Services
@inject IGitRepositoryService GitRepoService
@inject IConfiguration Configuration

<PageTitle>Git Repositories - DevBuddy</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-git"></i> Git Repositories</h2>
        <div class="d-flex align-items-center">
            <div class="form-check form-switch me-3">
                <input class="form-check-input" type="checkbox" id="autoFetchToggle" 
                       checked="@autoFetchEnabled" @onchange="ToggleAutoFetch">
                <label class="form-check-label" for="autoFetchToggle">
                    Auto Fetch (Every @autoFetchIntervalMinutes minutes)
                </label>
            </div>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Add Repository
            </button>
        </div>
    </div>

    @if (repositories == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!repositories.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No repositories configured yet. Click "Add Repository" to get started.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var repo in repositories)
            {
                var remoteType = GetRemoteType(repo.RemoteUrl);
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card repo-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">@repo.Name</h5>
                                <span class="badge @GetRemoteBadgeClass(remoteType)">
                                    <i class="@GetRemoteIcon(remoteType)"></i> @GetRemoteLabel(remoteType)
                                </span>
                            </div>
                            <p class="card-text">
                                @if (!string.IsNullOrWhiteSpace(repo.RemoteUrl))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-link-45deg"></i> @repo.RemoteUrl
                                    </small>
                                    <br />
                                }
                                <small class="text-muted">
                                    <i class="bi bi-folder"></i> 
                                    @if (repo.CloneStatus == CloneStatus.Cloned)
                                    {
                                        <a href="/ui/file-explorer/@repo.LocalPath" class="text-decoration-none">@repo.LocalPath</a>
                                    }
                                    else
                                    {
                                        @repo.LocalPath
                                    }
                                </small>
                            </p>
                            
                            <div class="mb-2">
                                <span class="badge status-badge @GetStatusBadgeClass(repo.CloneStatus)">
                                    @GetStatusText(repo.CloneStatus)
                                </span>
                            </div>

                            @if (repo.CloneStatus == CloneStatus.Cloned)
                            {
                                <div class="mb-2">
                                    <strong>Branch:</strong> @(repo.CurrentBranch ?? "N/A")
                                </div>
                                @if (repo.CommitsAhead > 0 || repo.CommitsBehind > 0)
                                {
                                    <div class="mb-2">
                                        <small>
                                            <i class="bi bi-arrow-up-circle text-success"></i> @repo.CommitsAhead ahead
                                            <i class="bi bi-arrow-down-circle text-warning"></i> @repo.CommitsBehind behind
                                        </small>
                                    </div>
                                }
                                @if (repo.HasUncommittedChanges)
                                {
                                    <div class="mb-2">
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> Uncommitted changes
                                        </span>
                                    </div>
                                }
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowBranchModal(repo.Id)">
                                    <i class="bi bi-arrow-left-right"></i> Switch Branch
                                </button>
                            }

                            @if (!string.IsNullOrEmpty(repo.ErrorMessage))
                            {
                                <div class="alert alert-danger mt-2 mb-0 p-2">
                                    <small>@repo.ErrorMessage</small>
                                </div>
                            }

                            <div class="mt-2">
                                <small class="text-muted">
                                    Last checked: @(repo.LastChecked?.ToString("g") ?? "Never")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => RefreshStatus(repo.Id)">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                            <button class="btn btn-sm btn-outline-danger float-end" @onclick="() => DeleteRepository(repo.Id)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Add Repository Modal *@
@if (showAddModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Git Repository</h5>
                    <button type="button" class="btn-close" @onclick="HideAddModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="localRepoToggle" 
                                   checked="@isLocalRepo" @onchange="ToggleRepoType">
                            <label class="form-check-label" for="localRepoToggle">
                                <i class="bi bi-laptop"></i> Create as local repository (no remote)
                            </label>
                        </div>
                        <small class="form-text text-muted">Local repositories are initialized without a remote URL</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind="newRepo.Name" placeholder="my-project" />
                    </div>
                    @if (!isLocalRepo)
                    {
                        <div class="mb-3">
                            <label class="form-label">Remote URL</label>
                            <input type="text" class="form-control" @bind="newRepo.RemoteUrl" 
                                   placeholder="https://github.com/user/repo.git" />
                        </div>
                    }
                    <div class="mb-3">
                        <label class="form-label">Local Path</label>
                        <input type="text" class="form-control" @bind="newRepo.LocalPath" 
                               placeholder="my-project" />
                        <small class="form-text text-muted">
                            Path within /git-repos where the repo will be @(isLocalRepo ? "initialized" : "cloned")
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideAddModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="AddRepository">
                        @(isLocalRepo ? "Initialize Repository" : "Add Repository")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Branch Switch Modal *@
@if (showBranchModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Branch Manager</h5>
                    <button type="button" class="btn-close" @onclick="HideBranchModal"></button>
                </div>
                <div class="modal-body">
                    @if (localBranches == null || remoteBranches == null)
                    {
                        <div class="text-center">
                            <div class="spinner-border spinner-border-sm" role="status"></div>
                        </div>
                    }
                    else
                    {
                        <!-- Branch Mode Selection -->
                        <div class="mb-3">
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="branchMode" id="checkoutMode" 
                                       checked="@(!isCreateMode)" @onchange="() => SetBranchMode(false)">
                                <label class="btn btn-outline-primary" for="checkoutMode">
                                    <i class="bi bi-arrow-right-circle"></i> Checkout Existing Branch
                                </label>
                                
                                <input type="radio" class="btn-check" name="branchMode" id="createMode"
                                       checked="@isCreateMode" @onchange="() => SetBranchMode(true)">
                                <label class="btn btn-outline-success" for="createMode">
                                    <i class="bi bi-plus-circle"></i> Create New Branch
                                </label>
                            </div>
                        </div>

                        @if (!isCreateMode)
                        {
                            <!-- Checkout Mode -->
                            <div class="mb-3">
                                <label class="form-label">Select a local branch to checkout</label>
                                <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                                    @if (!localBranches.Any())
                                    {
                                        <div class="list-group-item text-muted">
                                            <i class="bi bi-info-circle"></i> No local branches found. Create a new branch to get started.
                                        </div>
                                    }
                                    @foreach (var branch in localBranches)
                                    {
                                        <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" 
                                                @onclick="() => CheckoutBranch(branch)">
                                            <span><i class="bi bi-git"></i> @branch</span>
                                            <i class="bi bi-arrow-right"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Create Mode -->
                            <div class="mb-3">
                                <label class="form-label">New branch name</label>
                                <input type="text" class="form-control" @bind="newBranchName" 
                                       placeholder="Enter branch name (e.g., feature/new-feature)" />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Track remote branch (optional)</label>
                                <select class="form-select" @bind="selectedRemoteBranch">
                                    <option value="">-- None (create independent branch) --</option>
                                    @foreach (var remoteBranch in remoteBranches)
                                    {
                                        <option value="@remoteBranch">@remoteBranch</option>
                                    }
                                </select>
                                <small class="form-text text-muted">
                                    Select a remote branch to track, or leave empty to create an independent local branch.
                                </small>
                            </div>
                            
                            <div class="d-grid">
                                <button class="btn btn-success" @onclick="CreateBranch" 
                                        disabled="@string.IsNullOrWhiteSpace(newBranchName)">
                                    <i class="bi bi-plus-circle"></i> Create Branch
                                </button>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideBranchModal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GitRepositoryConfiguration>? repositories;
    private bool showAddModal = false;
    private bool showBranchModal = false;
    private int selectedRepoId = 0;
    private List<string>? localBranches;
    private List<string>? remoteBranches;
    private bool autoFetchEnabled = false;
    private int autoFetchIntervalMinutes = 5;
    private bool isCreateMode = false;
    private string newBranchName = "";
    private string selectedRemoteBranch = "";
    private bool isLocalRepo = false;
    
    private GitRepositoryConfiguration newRepo = new()
    {
        Name = "",
        RemoteUrl = "",
        LocalPath = ""
    };

    protected override async Task OnInitializedAsync()
    {
        autoFetchEnabled = Configuration.GetValue<bool>("GitRepos:AutoFetchEnabled", false);
        autoFetchIntervalMinutes = Configuration.GetValue<int>("GitRepos:AutoFetchIntervalMinutes", 5);
        await LoadRepositories();
    }

    private async Task LoadRepositories()
    {
        repositories = await GitRepoService.GetAllAsync();
    }

    private void ShowAddModal()
    {
        newRepo = new GitRepositoryConfiguration { Name = "", RemoteUrl = "", LocalPath = "" };
        isLocalRepo = false;
        showAddModal = true;
        StateHasChanged();
    }

    private void HideAddModal()
    {
        showAddModal = false;
    }

    private async Task AddRepository()
    {
        if (string.IsNullOrWhiteSpace(newRepo.Name) || 
            string.IsNullOrWhiteSpace(newRepo.LocalPath))
        {
            return;
        }

        // Validate that remote URL is provided if not creating a local repo
        if (!isLocalRepo && string.IsNullOrWhiteSpace(newRepo.RemoteUrl))
        {
            return;
        }

        // Clear remote URL if creating a local repo
        if (isLocalRepo)
        {
            newRepo.RemoteUrl = null;
        }

        await GitRepoService.CreateAsync(newRepo);
        await LoadRepositories();
        HideAddModal();
    }

    private void ToggleRepoType()
    {
        isLocalRepo = !isLocalRepo;
    }

    private string GetRemoteType(string? remoteUrl)
    {
        if (string.IsNullOrWhiteSpace(remoteUrl))
            return "local";
        
        if (remoteUrl.Contains("github.com", StringComparison.OrdinalIgnoreCase))
            return "github";
        
        if (remoteUrl.Contains("dev.azure.com", StringComparison.OrdinalIgnoreCase) || 
            remoteUrl.Contains("visualstudio.com", StringComparison.OrdinalIgnoreCase))
            return "azuredevops";
        
        if (remoteUrl.Contains("gitlab.com", StringComparison.OrdinalIgnoreCase))
            return "gitlab";
        
        if (remoteUrl.Contains("bitbucket.org", StringComparison.OrdinalIgnoreCase))
            return "bitbucket";
        
        return "git";
    }

    private string GetRemoteIcon(string remoteType)
    {
        return remoteType switch
        {
            "local" => "bi-laptop",
            "github" => "bi-github",
            "azuredevops" => "bi-cloud",
            "gitlab" => "bi-git",
            "bitbucket" => "bi-git",
            _ => "bi-git"
        };
    }

    private string GetRemoteLabel(string remoteType)
    {
        return remoteType switch
        {
            "local" => "Local",
            "github" => "GitHub",
            "azuredevops" => "Azure DevOps",
            "gitlab" => "GitLab",
            "bitbucket" => "Bitbucket",
            _ => "Remote"
        };
    }

    private string GetRemoteBadgeClass(string remoteType)
    {
        return remoteType switch
        {
            "local" => "bg-secondary",
            "github" => "bg-dark",
            "azuredevops" => "bg-primary",
            "gitlab" => "bg-warning text-dark",
            "bitbucket" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private async Task DeleteRepository(int id)
    {
        await GitRepoService.DeleteAsync(id);
        await LoadRepositories();
    }

    private async Task RefreshStatus(int id)
    {
        await GitRepoService.CheckRepositoryStatusAsync(id);
        await LoadRepositories();
    }

    private async Task ShowBranchModal(int repoId)
    {
        selectedRepoId = repoId;
        showBranchModal = true;
        localBranches = null;
        remoteBranches = null;
        isCreateMode = false;
        newBranchName = "";
        selectedRemoteBranch = "";
        
        var (local, remote) = await GitRepoService.GetLocalAndRemoteBranchesAsync(repoId);
        localBranches = local;
        remoteBranches = remote;
    }

    private void HideBranchModal()
    {
        showBranchModal = false;
        selectedRepoId = 0;
        localBranches = null;
        remoteBranches = null;
        isCreateMode = false;
        newBranchName = "";
        selectedRemoteBranch = "";
    }

    private void SetBranchMode(bool createMode)
    {
        isCreateMode = createMode;
    }

    private async Task CheckoutBranch(string branchName)
    {
        await GitRepoService.CheckoutBranchAsync(selectedRepoId, branchName, createNew: false);
        await RefreshStatus(selectedRepoId);
        HideBranchModal();
    }

    private async Task CreateBranch()
    {
        if (string.IsNullOrWhiteSpace(newBranchName))
            return;
            
        var trackRemote = string.IsNullOrWhiteSpace(selectedRemoteBranch) ? null : selectedRemoteBranch;
        await GitRepoService.CheckoutBranchAsync(selectedRepoId, newBranchName, createNew: true, trackRemoteBranch: trackRemote);
        await RefreshStatus(selectedRepoId);
        HideBranchModal();
    }

    private async Task ToggleAutoFetch(ChangeEventArgs e)
    {
        autoFetchEnabled = (bool)(e.Value ?? false);
        // Note: In a real implementation, this would update the configuration
        // For now, we're just updating the local state
        StateHasChanged();
    }

    private string GetStatusBadgeClass(CloneStatus status)
    {
        return status switch
        {
            CloneStatus.Cloned => "bg-success",
            CloneStatus.Cloning => "bg-info",
            CloneStatus.NotCloned => "bg-secondary",
            CloneStatus.Failed => "bg-danger",
            CloneStatus.Conflict => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText(CloneStatus status)
    {
        return status switch
        {
            CloneStatus.Cloned => "Cloned",
            CloneStatus.Cloning => "Cloning...",
            CloneStatus.NotCloned => "Not Cloned",
            CloneStatus.Failed => "Failed",
            CloneStatus.Conflict => "Conflict",
            _ => "Unknown"
        };
    }
}
