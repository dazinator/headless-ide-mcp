@page "/ui"
@page "/ui/"

<PageTitle>Welcome - DevBuddy</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <h1 class="display-4 mb-4">
                        <i class="bi bi-tools text-primary"></i>
                        Welcome to DevBuddy
                    </h1>
                    <p class="lead mb-4">
                        Your local development companion for managing Git repositories and more.
                    </p>
                    <hr class="my-4" />
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-git text-success"></i>
                                        Git Repository Manager
                                    </h5>
                                    <p class="card-text">
                                        Manage your Git repositories with ease. Clone, track status, and switch branches.
                                    </p>
                                    <a href="/ui/git-repos" class="btn btn-primary">Get Started</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-gear text-secondary"></i>
                                        More Features Coming Soon
                                    </h5>
                                    <p class="card-text">
                                        We're continuously adding new features to make your development workflow easier.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
