@using DevBuddy.Server.Data.Models
@using DevBuddy.Server.Services
@using VisNetwork.Blazor
@inject IGraphNodeService GraphNodeService
@inject IDomainService DomainService
@inject IJSRuntime JSRuntime

<div class="row">
    <div class="col-md-2">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Node Palette</h6>
            </div>
            <div class="card-body p-2">
                <div class="mb-2">
                    <label class="form-label small">Filter by Domain:</label>
                    <select class="form-select form-select-sm" @bind="selectedDomainFilter" @bind:after="LoadNodeTypes">
                        <option value="0">All Domains</option>
                        @if (domains != null)
                        {
                            @foreach (var domain in domains)
                            {
                                <option value="@domain.Id">@domain.Name</option>
                            }
                        }
                    </select>
                </div>
                
                @if (filteredNodeTypes != null && filteredNodeTypes.Any())
                {
                    <div class="list-group list-group-sm">
                        @foreach (var nodeType in filteredNodeTypes)
                        {
                            <div class="list-group-item p-2" style="cursor: grab;" @onclick="() => AddNodeOfType(nodeType)">
                                <small><strong>@nodeType.Name</strong></small>
                                <br />
                                <small class="text-muted">@nodeType.Domain.Name</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted small">No node types available</p>
                }
            </div>
        </div>
        
        <div class="card mt-2">
            <div class="card-header">
                <h6 class="mb-0">Edge Types</h6>
            </div>
            <div class="card-body p-2">
                @if (edgeTypes != null)
                {
                    <select class="form-select form-select-sm" @bind="selectedEdgeTypeId">
                        @foreach (var edgeType in edgeTypes)
                        {
                            <option value="@edgeType.Id">@edgeType.Name</option>
                        }
                    </select>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card" style="height: 600px;">
            <div class="card-body p-0">
                <div id="graph-network" style="width: 100%; height: 100%;"></div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Selected Node</h6>
            </div>
            <div class="card-body">
                @if (selectedNode != null)
                {
                    <div class="mb-2">
                        <strong>@selectedNode.Name</strong>
                        <br />
                        <small class="text-muted">@selectedNode.NodeType.Name</small>
                    </div>
                    
                    <button class="btn btn-sm btn-primary w-100 mb-2" @onclick="EditSelectedNode">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    
                    @if (selectedNode.ContentStorageType == ContentStorageType.Embedded)
                    {
                        <button class="btn btn-sm btn-secondary w-100 mb-2" @onclick="EditContent">
                            <i class="bi bi-file-text"></i> Edit Content
                        </button>
                    }
                    
                    <button class="btn btn-sm btn-danger w-100" @onclick="DeleteSelectedNode">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                }
                else
                {
                    <p class="text-muted small">No node selected</p>
                }
            </div>
        </div>
    </div>
</div>

@* Edit Node Modal *@
@if (showEditNodeModal && editingNode != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingNode.Id > 0 ? "Edit" : "Create") Node</h5>
                    <button type="button" class="btn-close" @onclick="HideEditNodeModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind="editingNode.Name" />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Content Storage Type</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="storageType" id="embeddedRadio" 
                                       checked="@(editingNode.ContentStorageType == ContentStorageType.Embedded)"
                                       @onchange="() => editingNode.ContentStorageType = ContentStorageType.Embedded" />
                                <label class="form-check-label" for="embeddedRadio">Embedded</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="storageType" id="externalRadio"
                                       checked="@(editingNode.ContentStorageType == ContentStorageType.External)"
                                       @onchange="() => editingNode.ContentStorageType = ContentStorageType.External" />
                                <label class="form-check-label" for="externalRadio">External</label>
                            </div>
                        </div>
                    </div>
                    
                    @if (editingNode.ContentStorageType == ContentStorageType.External)
                    {
                        <div class="mb-3">
                            <label class="form-label">External URI</label>
                            <input type="text" class="form-control" @bind="editingNode.ExternalUri" 
                                   placeholder="https://example.com or /path/to/file" />
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideEditNodeModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveNode">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@* Edit Content Modal *@
@if (showEditContentModal && selectedNode != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Content - @selectedNode.Name</h5>
                    <button type="button" class="btn-close" @onclick="HideEditContentModal"></button>
                </div>
                <div class="modal-body">
                    <textarea class="form-control font-monospace" rows="20" @bind="contentText"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideEditContentModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveContent">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Domain>? domains;
    private List<NodeType>? allNodeTypes;
    private List<NodeType>? filteredNodeTypes;
    private List<EdgeType>? edgeTypes;
    private List<Node>? nodes;
    private List<Edge>? edges;
    
    private int selectedDomainFilter = 0;
    private int selectedEdgeTypeId = 1;
    private Node? selectedNode;
    private Node? editingNode;
    
    private bool showEditNodeModal;
    private bool showEditContentModal;
    private string contentText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await RenderNetwork();
    }

    private async Task LoadData()
    {
        domains = await DomainService.GetAllDomainsAsync();
        nodes = await GraphNodeService.GetAllNodesAsync();
        edges = await GraphNodeService.GetEdgesAsync();
        edgeTypes = await GraphNodeService.GetEdgeTypesAsync();
        
        if (edgeTypes.Any())
        {
            selectedEdgeTypeId = edgeTypes.First().Id;
        }
        
        await LoadNodeTypes();
    }

    private async Task LoadNodeTypes()
    {
        if (domains == null) return;
        
        allNodeTypes = new List<NodeType>();
        foreach (var domain in domains)
        {
            var nodeTypes = await DomainService.GetNodeTypesForDomainAsync(domain.Id);
            foreach (var nt in nodeTypes)
            {
                nt.Domain = domain;
            }
            allNodeTypes.AddRange(nodeTypes);
        }
        
        filteredNodeTypes = selectedDomainFilter == 0 
            ? allNodeTypes 
            : allNodeTypes.Where(nt => nt.DomainId == selectedDomainFilter).ToList();
    }

    private async Task RenderNetwork()
    {
        // This would use VisNetwork.Blazor to render the graph
        // For now, we'll use a placeholder JavaScript interop
        await JSRuntime.InvokeVoidAsync("console.log", "Network would be rendered here");
    }

    private void AddNodeOfType(NodeType nodeType)
    {
        editingNode = new Node
        {
            Name = $"New {nodeType.Name}",
            DomainId = nodeType.DomainId,
            NodeTypeId = nodeType.Id,
            ContentStorageType = ContentStorageType.Embedded,
            Domain = nodeType.Domain,
            NodeType = nodeType
        };
        showEditNodeModal = true;
    }

    private void EditSelectedNode()
    {
        if (selectedNode != null)
        {
            editingNode = selectedNode;
            showEditNodeModal = true;
        }
    }

    private void HideEditNodeModal()
    {
        showEditNodeModal = false;
        editingNode = null;
    }

    private async Task SaveNode()
    {
        if (editingNode == null) return;

        if (editingNode.Id > 0)
        {
            await GraphNodeService.UpdateNodeAsync(editingNode);
        }
        else
        {
            var created = await GraphNodeService.CreateNodeAsync(editingNode);
            if (editingNode.ContentStorageType == ContentStorageType.Embedded && editingNode.Document == null)
            {
                // Document will be created when content is edited
            }
        }

        await LoadData();
        await RenderNetwork();
        HideEditNodeModal();
    }

    private async Task DeleteSelectedNode()
    {
        if (selectedNode != null && await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Are you sure you want to delete this node?" }))
        {
            await GraphNodeService.DeleteNodeAsync(selectedNode.Id);
            await LoadData();
            await RenderNetwork();
            selectedNode = null;
        }
    }

    private void EditContent()
    {
        if (selectedNode?.Document != null)
        {
            contentText = selectedNode.Document.Content;
        }
        else
        {
            contentText = string.Empty;
        }
        showEditContentModal = true;
    }

    private void HideEditContentModal()
    {
        showEditContentModal = false;
    }

    private async Task SaveContent()
    {
        // Implementation for saving content would go here
        HideEditContentModal();
    }
}
